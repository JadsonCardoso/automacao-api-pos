{
  "name": "pos-api",
  "version": "1.0.0",
  "description": "API para estudo de testes e automação de APIs com Express",
  "main": "server.js",
  "scripts": {
    "test": "mocha test/**/*.test.js --timeout 10000 --reporter mochawesome",
    "test-rest-external": "mocha test/rest/external/**/*.test.js --timeout 10000 --reporter mochawesome",
    "test-rest-controller": "mocha test/rest/controller/**/*.test.js --timeout 10000 --reporter mochawesome",
    "test-graphql-external": "mocha test/graphql/external/**/*.test.js --timeout 10000 --reporter mochawesome",
    "test-graphql-controller": "mocha test/graphql/controller/**/*.test.js --timeout 10000 --reporter mochawesome",
    "start-rest": "node server.js",
    "start-graphql": "node graphql/server.js"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "body-parser": "^2.2.0",
    "chai": "^5.2.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^11.7.1",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "chai-exclude": "^3.0.1",
    "dotenv": "^17.2.2",
    "mochawesome": "^7.1.3"
  }
}
